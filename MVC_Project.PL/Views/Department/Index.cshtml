@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}
    
<h1>All Departments</h1>
<br />

<a class="btn btn-success" asp-action="Create" mt-5> Create New Department </a>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(d => d.Code)</td>
                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.DateOfCreation)</td>
                <td>Details</td>
                <td>Update</td>
                <td> Delete</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.DateOfCreation</td>
                    <td>
                        <a class="btn - btn-warning" asp-action="Details" asp-route-id="@item.Id"> 
                            <i class="fas fa-eye"></i>Details
                        </a>
                    </td>
                     <td>
                        <a class="btn - btn-success" asp-action="Edit" asp-route-id="@item.Id"> 
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a class="btn - btn-danger" asp-action="Delete" asp-route-id="@item.Id"> 
                            <i class="fas fa-trash"></i> Delete
                        </a>
                       
                    </td>     
                </tr>
            }
        </tbody>

    </table>

}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There are No Department, yet ;)</h3>
    </div>
}




